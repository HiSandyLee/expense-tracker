<div class="col-6 justify-content-center  mt-3 mx-auto">
  <form action="/records" method="POST">
    <div class="form-group form-row">
      <label for="name" class="col-md-2 col-form-label">
        支出項目
      </label>
      <div class="col-md-10">
        <input type="text" placeholder="請輸入項目名稱" name="name" class="form-control" required>
      </div>
    </div>

    <div class="form-group row no-gutters align-items-center">
      <label for="category" class="col-md-2 col-form-label">
        支出類別
      </label>
      <div class="col-md-10">
        <select class="form-control text-muted" name="category" id="category" required>
          <option value="">請選擇類別</option>
          <option value="home" {{#if category.home}} selected {{/if}}>家居物業</option>
          <option value="traffic" {{#if category.traffic}} selected {{/if}}>交通出行</option>
          <option value="entertainment" {{#if category.entertainment}} selected {{/if}}>休閒娛樂</option>
          <option value="food" {{#if category.food}} selected {{/if}}>餐飲食品</option>
          <option value="other" {{#if category.other}} selected {{/if}}>其他</option>
        </select>
      </div>
    </div>

    <div class="form-group form-row">
      <label for="date" class="col-md-2 col-form-label">
        支出日期
      </label>
      <div class="col-md-10">
        <input type="date" class="form-control" id="date" name="date" required>
      </div>
    </div>
    <div class="form-group form-row">
      <label for="amount" class="col-md-2 col-form-label">
        支出金額
      </label>
      <div class="col-md-10">
        <input type="number" placeholder="請輸入項目金額" name="amount" class="form-control" min="0" required>
      </div>
    </div>
    <div class=" mt-3 text-center">
      <button class="btn-lg btn-info " type="submit" id="add btn">Create</button>
    </div>
  </form>
</div>