<div class="col-6 justify-content-center  mt-3 mx-auto">
  <form action="/records/{{ record._id }}?_method=PUT" method="POST">
    <div class="form-group form-row">
      <label for="name" class="col-md-2 col-form-label">
        支出項目
      </label>
      <div class="col-md-10">
        <input type="text" placeholder="請輸入項目名稱" name="name" class="form-control " value="{{record.name}}" required>
      </div>
    </div>
    <div class="form-group form-row">
      <label for="category" class="col-md-2 col-form-label">
        支出類別
      </label>
      <div class="col-md-10">
        <input type="text" placeholder="請輸入項目類別" name="category" class="form-control" value="{{record.category}}"
          required>
      </div>
    </div>
    <div class="form-group form-row">
      <label for="date" class="col-md-2 col-form-label">
        支出日期
      </label>
      <div class="col-md-10">
        <input type="text" placeholder="請輸入日期" name="date" class="form-control" value="{{record.date}}" required>
      </div>
    </div>
    <div class="form-group form-row">
      <label for="amount" class="col-md-2 col-form-label">
        支出金額
      </label>
      <div class="col-md-10">
        <input type="text" placeholder="請輸入項目金額" name="amount" class="form-control" value="{{record.amount}}" required>
      </div>
    </div>
    <div class="mt-3 text-center">
      <button type="submit" class="btn btn-info">Edit</button>
      <button type="submit" class="btn btn-light"><a href="/" style="text-decoration:none">back</a></button>
    </div>

  </form>
</div>