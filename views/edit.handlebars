<form action="/records/{{record._id}}/edit" method="POST">
  <div class="form-group form-row">
    <label for="name" class="col-md-2 col-form-label">
      支出項目
    </label>
    <div class="col-md-10">
      <input type="text" placeholder="{{record.name}}" name="name" class="form-control" value="{{record.name}}"
        required>
    </div>
  </div>
  <div class="form-group form-row">
    <label for="category" class="col-md-2 col-form-label">
      支出類別
    </label>
    <div class="col-md-10">
      <input type="text" placeholder="{{record.category}}" name="category" class="form-control"
        value="{{record.category}}" required>
    </div>
  </div>
  <div class="form-group form-row">
    <label for="date" class="col-md-2 col-form-label">
      支出日期
    </label>
    <div class="col-md-10">
      <input type="text" placeholder="{{record.date}}" name="date" class="form-control" value="{{record.date}}"
        required>
    </div>
  </div>
  <div class="form-group form-row">
    <label for="amount" class="col-md-2 col-form-label">
      支出金額
    </label>
    <div class="col-md-10">
      <input type="text" placeholder="{{record.amount}}" name="amount" class="form-control" value="{{record.amount}}"
        required>
    </div>
  </div>
  <button type="submit">Save</button>
  <a href="/">back</a>
</form>